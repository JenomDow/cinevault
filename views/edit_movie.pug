extends layout

block content
  h2 Edit #{movie.name}
  if error
    p.error #{error}
  form(action=`/movies/${movie._id}?_method=PUT`, method="POST")
    label Name:
    input(type="text", name="name", value=movie.name, required)
    label Description:
    textarea(name="description")= movie.description
    label Year:
    input(type="number", name="year", value=movie.year, required)
    label Genres:
    input(type="text", name="genres", value=movie.genres.join(', '), required)
    label Rating:
    input(type="number", name="rating", value=movie.rating, step="0.1", required)
    button(type="submit") Update
